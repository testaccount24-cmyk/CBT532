<<MHR1>>
IF (A1 EQ '')
    RESPONSE 'MHR AGE'
ENDIF
+LET L1 = 205 - (+A1+ / 2.0)
 LET L2 = L1 * .90
 LET L3 = L1 * .85
 LET L4 = L1 * .70
 LET L5 = L1 * .60
WRITE
' '
' '
'MAXIMUM HEART RATE: '|L1
' '
'IMPROVE        90%: '|L2
' '
'               85%: '|L3
' '
'MAINTAIN       70%: '|L4
' '
'               60%: '|L5
ENDWRITE
